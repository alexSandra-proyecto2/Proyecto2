<div class="events-index">
  <div class="container">
    <br>
    <div class="row">
      <div class="col-md-4">
        <h1 style="font-weight: 100">Lista de eventos</h1>
      </div>
      <div class="col-md-6">
      </div>
      <div class="col-md-2">
        <a href="events/add" class="btn btn-dark">Añadir un evento</a>
      </div>
    </div>
  

    {{#each event}}
    <div class="container-events">
      <div class="col-md-6 card-body">
        <h5><strong>Nombre del evento: </strong> {{name}}</h5>
        <p><strong>Día del evento: </strong>{{date}}</p>
        <p><strong>Descripción del envento:</strong> {{description}}</p>
        <p><strong>Creador del evento:</strong> {{creator}}</p>
        <p><strong>Tipo de evento:</strong> {{type}}</p>
        <p><strong>Dirección del evento:</strong> {{address}}</p>
        <p><strong>Asistentes:</strong></p>
        {{#each this.assistants}}
        <p>{{this.username}}</p>
        {{/each}}

        <a href="/events/join?eventId={{_id}}" class="btn btn-dark">Unirme al evento</a>
        <a href="/events/edit?eventId={{_id}}" class="btn btn-dark">Modificar evento</a>
        <a href="/events/delete?eventId={{_id}}" class="btn btn-dark">Borrar evento</a>



      </div>

    </div>
