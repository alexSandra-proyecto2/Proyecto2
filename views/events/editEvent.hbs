<div class="container">
  <br>
  <div class="row">

    <div class="col-md-6">
      <h1 style="font-weight: 100">Editar un evento {{name}}</h1>
    </div>


    <div class="col-md-6">

      <form action="/events/edit?eventId={{_id}}" method="post">
        <div class="form-group">
          <label for="name-input">Nombre del evento</label>
          <input name="name" type="text" class="form-control" id="name-input" value="{{name}}">
        </div>
        <div class="form-group">
          <label for="date-input">Dia del evento</label>
          <input name="date" type="text" class="form-control" id="date-input" value="{{date}}">
        </div>
        <div class="form-group">
          <label for="description-input">Descripci√≥n</label>
          <input name="description" type="text" class="form-control" id="description-input" value="{{description}}">
        </div>
        <div class="form-group">
          <label for="type-input">Tipo de evento</label>
          <input name="type" type="text" class="form-control" id="type-input" value="{{type}}">
        </div>
        <div>
          <h6>Lugar del evento</h6>
        </div>
        <div class="form-group">
          <label for="field3">Latitud: </label>
          <input type="text" name="latitude" placeholder="latitude" class="form-control" value="{{latitude}}">
        </div>
        <div class=" form-group">
          <label for="field4">Longitud: </label>
          <input type="text" name="longitude" placeholder="longitude" class="form-control" value="{{longitude}}">
        </div>

        <button type="submit" class="btn btn-dark">Guardar el cambio</button>
        <a href="/events" class="btn btn-dark">Volver</a>

      </form>
    </div>

  </div>
</div>