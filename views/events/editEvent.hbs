<div class="container">
  <br>
  <div class="row">

    <div class="col-md-6">
      <h1 style="font-weight: 100">Editar el evento: <br> <strong>{{name}}</strong> </h1>
    </div>


    <div class="col-md-6">
      <p id="eventId" event={{_id}}></p>
      <form action="/events/edit?eventId={{_id}}" method="post">
        <div class="form-group">
          <label for="name-input">Nombre del evento</label>
          <input name="name" type="text" class="form-control" id="name-input" value="{{name}}">
        </div>
        <div class="form-group">
          <label for="date-input">Dia del evento</label>
          <input name="date" type="text" class="form-control" id="date-input" value="{{date}}">
        </div>
        <div class="form-group">
          <label for="description-input">Descripción</label>
          <input name="description" type="text" class="form-control" id="description-input" value="{{description}}">
        </div>
        <div class="form-group">
          <label for="type-input">Tipo de evento</label>
          <input name="type" type="text" class="form-control" id="type-input" value="{{type}}">
        </div>
        <div class="form-group">
          <label for="dirInput2">Dirección: </label>
          <input type="text" id="dirInput2" name="address" value="{{address}}" class="form-control">
        </div>

        <button type="submit" class="btn btn-dark" id="guardacambio">Guardar el cambio</button>
        <a href="/events" class="btn btn-dark">Volver</a>

      </form>
    </div>

  </div>
</div>

<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script src="../javascripts/GoogleAPIHandler.js"></script>
<script src="../javascripts/editEventLocation.js"></script>