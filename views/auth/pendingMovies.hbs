<div class="movies-index">
  <div class="container">
    <br>
    <div class="row header">
      <div class="col-md-6">
        <h1 style="font-weight: 100"><img src="/images/market_orange.png" style="width: 30px; height: 40px"> Películas pendientes</h1>
      </div>
      <div class="col-md-8">
      </div>
      {{!-- <div class="col-md-2">
      <a href="#" class="btn btn-dark">Página siguiente</a>
    </div> --}}
    </div>
    <br>

    {{#each pending}}
    <div class="containerMovies">
      <div class="image-movies">
        <img src="http://image.tmdb.org/t/p/w185/{{poster_path}}" alt="imagen" class="img-movie">
      </div>
      <div class="card-body">
        <br><br>
        <h5><strong>Título: </strong> {{title}}</h5>
        <p class="description-movies"><strong>Descripción: </strong>{{overview}}</p>
        <p><strong>Calificación:</strong> {{vote_average}}</p>
        {{!-- <a href="/movies/shown?movieId={{id}}" class="btn btn-dark">Marcar como vista</a> --}}
        <a href="/auth/profile/pending/delete?movieId={{_id}}" class="btn btn-dark">Marcar como vista</a>
        <a href="/auth/profile/pending/deleteFromPending?movieId={{_id}}" class="btn btn-dark">Borrar de pendientes</a>
      </div>
    </div>
    <hr>
    {{/each}}

  </div>
</div>