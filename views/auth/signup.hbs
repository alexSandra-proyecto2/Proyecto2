<div class="container">
  <br>
  <div class="row">

    <div class="col-md-6">
      <h1 style="font-weight: 100">Singup</h1>
    </div>

    <div class="col-md-6">

      <form action="/auth/signup" method="POST" id="form-container">
        <div class="form-group">
          <label for="username">Username</label>
          <input id="username" class="form-control" type="text" name="username" placeholder="JonSnow">
        </div>

        <br>

        <div class="form-group">
          <label for="email">Email</label>
          <input id="email" class="form-control" type="email" name="email" placeholder="JonSnow@gmail.com">
        </div>

        <br>
        <div class="form-group">
          <label for="password">Password</label>
          <input id="password" class="form-control" type="password" name="password" placeholder="Your password">
        </div>

        <br>

        {{#if message }}
        <div class="error-message">{{ message }}</div>
        {{/if}}


        <button type="submit" class="btn btn-dark">Create account</button>

        <p class="account-message">
          <br>
          Do you already have an account?
          <a href="/auth/login">Login</a>
        </p>
      </form>
    </div>
  </div>
</div>