<div class="edit-index">
  <div class="container">
    <br>
    <div class="row header">

      <div class="col-md-6">
        <h1 style="font-weight: 100">Login</h1>
      </div>


      <div class="col-md-6">

        <form action="/auth/login" method="POST" id="form-container">
          <div class="form-group">
            <label for="email">Email</label>
            <input id="email" class="form-control" type="email" name="email" placeholder="JonSnow@gmail.com">
          </div>
          <br>
          <div class="form-group">
            <label for="password">Password</label>
            <input id="password" class="form-control" type="password" name="password" placeholder="Your password">
          </div>
          <br>
          {{#if message }}
          <div class="error-message">{{ message }}</div>
          {{/if}}


          <button type="submit" class="btn btn-dark">Login</button>

          <p style="color:#E1E3E2" class="account-message">
            <br>
            Don't have an account yet?
            <a href="/auth/signup">Signup</a>
          </p>
      </div>
    </div>
  </div>
</div>


