<div class="edit-index">
  <div class="container">
    <br>
    <div class="row header">
      {{#with movie}}
      <div class="col-md-6">
        <h3 style="font-weight: 100 ;color:#E1E3E2">Añadir localización de: <br> <strong
            style="text-transform: uppercase;">{{title}}</strong> </h3>
        <img src="http://image.tmdb.org/t/p/w185/{{poster_path}}" alt="imagen">
        <p id="movieId" popino={{id}}></p>
      </div>

      <div class="col-md-6">

        <form action="/movies/add?movieId={{id}}" method="POST">
          <div class="form-group">
            <label for="dirInput" style="color:#E1E3E2">Dirección: </label>
            <input type="text" id="dirInput" name="address" placeholder="Calle Serrano 14, Madrid" class="form-control">
          </div>

          {{!-- onClick="initMap(geocodeAddress(geocoder, address.value))" --}}
          <button type="submit" class="btn btn-dark" id="direccion">Añadir
            localización</button>
        </form>
      </div>

    </div>
  </div>
  {{/with}}
</div>
</div>

<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script src="../javascripts/GoogleAPIHandler.js"></script>
<script src="../javascripts/addMovie.js"></script>