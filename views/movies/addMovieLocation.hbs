<div class="container">
  <br>
  <div class="row">
    {{#with movie }}
    <div class="col-md-6">
      <h1 style="font-weight: 100">Añadir localización de la {{movie.title}}</h1>
    </div>

    <div class="col-md-6">

      <form action="/movies/add" method="POST">
        <div class="form-group">
          <label for="field1">Address: </label>
          <input type="text" name="address" placeholder="address" class="form-control">
        </div>
        {{!-- onClick="mapa.getCoords()" --}}
        <button type="submit" class="btn btn-dark">Añadir localizaciones</button>
      </form>
    </div>

  </div>
</div>
{{/with}}

<figure style='width:0;height:0' id="map"></figure>
</div>

<script src="../javascripts/addMovie.js"></script>
<script
  src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDG88rK2sVwRDbZIJautuIZpNt32kAQpSU&callback=initMap"></script>